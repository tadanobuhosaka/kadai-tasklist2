<ul class="media-list">
  <% tasklists.each do |tasklist| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(tasklist.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to tasklist.user.name, user_path(tasklist.user) %> <span class="text-muted">posted at <%= tasklist.created_at %></span>
        </div>
        <div>
          <p>Task</p>
          <p><%= tasklist.content %></p>
          <p>Status</p>
          <p><%= tasklist.status %></p>
        </div>
        <div>
          <% if current_user == tasklist.user %>
            <%= link_to "Delete", tasklist, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
    </li>
  <% end %>
  <% if tasklists.length > 0 %>
    <%= paginate tasklists %>
  <% end %>
</ul>